{{!-- 
     * Create a button in `index.handlebars` that will submit the user input into the database. --}}

<h3>Bob Flether's</h3>
<h1>BURGER'S DIGEST</h1>

<h4>Add Your Own Fun Pun Burger</h4>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<h2>Burgers Served</h2>

<ul>
  {{#each burgers}}
    {{#unless digested}}
      {{> burgers/burger-block digest=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Digested</h2>

<ul>
  {{#each burgers}}
    {{#if digested}}
      {{> burgers/burger-block digest=false}}
    {{/if}}
  {{/each}}
</ul>

